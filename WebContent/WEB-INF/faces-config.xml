<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

    <managed-bean>		
		<managed-bean-name>
			produtoBean
		</managed-bean-name>		
		<managed-bean-class>
			teste_JSFII.ProdutoMB
		</managed-bean-class>
		<managed-bean-scope>
			session
		</managed-bean-scope>	
	</managed-bean>
	
    <managed-bean>		
		<managed-bean-name>
			unidadeBean
		</managed-bean-name>		
		<managed-bean-class>
			teste_JSFII.UnidadeMB
		</managed-bean-class>
		<managed-bean-scope>
			session
		</managed-bean-scope>	
	</managed-bean>
	
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
       
    	<navigation-case>
			<from-outcome>cadastro</from-outcome>
			<to-view-id>cadastroProduto.xhtml</to-view-id>
		</navigation-case>
		
    	<navigation-case>
			<from-outcome>cadastroUnidade</from-outcome>
			<to-view-id>cadastroUnidade.xhtml</to-view-id>
		</navigation-case>
		
    	<navigation-case>
    	    <from-outcome>listarProdutos</from-outcome>
    	    <to-view-id>listarProdutos.xhtml</to-view-id>
    	</navigation-case>
    	
    	<navigation-case>
    	    <from-outcome>listarUnidades</from-outcome>
    	    <to-view-id>listarUnidades.xhtml</to-view-id>
    	</navigation-case>
	
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/cadastroProduto.xhtml</from-view-id>
       
    	<navigation-case>
			<from-outcome>salvo</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
	
    </navigation-rule>    
    
    <navigation-rule>
        <from-view-id>/cadastroUnidade.xhtml</from-view-id>
       
    	<navigation-case>
			<from-outcome>salvo</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
	
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/listarProdutos.xhtml</from-view-id>
       
    	<navigation-case>
			<from-outcome>voltar</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
	
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>/listarUnidades.xhtml</from-view-id>
       
    	<navigation-case>
			<from-outcome>voltar</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
	
    </navigation-rule> 
    
</faces-config>
